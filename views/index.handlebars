

<div class="jumbotron jumbotron-fluid" id="header">
  <div class="container">
    <h1 class="display-3">Nom Tracker!</h1>

    <div class="row justify-content-center align-items-end">
      <div class="col-md-4">
        <form class="create-food" action="/api/food/" method="post">
          <textarea class="form-control" id="value" name="value" rows="1" required placeholder="Add Nom Description"></textarea>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Add Noms</button>
      </div>
        </form>
    </div>


  </div>
</div>

<div class="container">
  <div class="row justify-content-around">

    <div class="col-md-5">
      <h2>Noms that have not been nommed:</h2>
      <ul class="list-group">
        {{#each food}}
        {{#unless is_eaten}}
        {{> food/food-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-5">
      <h2>Recently Nommed:</h2>
      <ul class="list-group">
        {{#each food}}
        {{#if is_eaten}}
        {{> food/food-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div> <!-- End Row -->
</div>

<footer class="" id="footer">
  <div class="container">
    <p>Made by Ben Lambillotte</p>
  </div>
</footer>
